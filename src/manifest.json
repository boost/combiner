{
  "manifest_version": 2,
  "default_locale": "en",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "16": "images/icons/16x16.png",
    "38": "images/icons/38x38.png",
    "48": "images/icons/48x48.png",
    "96": "images/icons/96x96.png",
    "128": "images/icons/128x128.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Shift+E"
      }
    },
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+E"
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.pivotaltracker.com/*"],
      "js": ["content/pivotal.js"],
      "css": ["content/pivotal.css"]
    },
    {
      "matches": ["https://basecamp.com/*"],
      "js": ["content/basecamp.js"],
      "all_frames": true,
      "run_at": "document_end"
    },
    {
      "matches": ["https://github.com/*"],
      "js": ["content/github.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://gitlab.digitalnz.org/*",
        "https://gitlab.com/*/*/merge_requests/new*"
      ],
      "js": ["content/gitlab.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_title": "Boost",
    "default_popup": "popup/index.html?uilocation=popup",
    "browser_style": true,
    "default_icon": {
      "16": "images/icons/16x16.png",
      "19": "images/icons/19x19.png",
      "20": "images/icons/20x20.png",
      "38": "images/icons/38x38.png",
      "48": "images/icons/48x48.png"
    }
  },
  "sidebar_action": {
    "default_title": "Boost",
    "default_panel": "popup/index.html?uilocation=sidebar",
    "default_icon": {
      "16": "images/icons/16x16.png",
      "19": "images/icons/19x19.png",
      "20": "images/icons/20x20.png",
      "38": "images/icons/38x38.png",
      "48": "images/icons/48x48.png"
    }
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage",
    "tabs"
  ]
}
